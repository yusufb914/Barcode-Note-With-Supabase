{
  "manifest_version": 3,
  "name": "Barkod Arama Eklentisi",
  "version": "2.0",
  "description": "CSV dosyasÄ±ndan barkod ara ve not ekle",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "tabs",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://izlcuykhlogenvkytuwo.supabase.co/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Barkod Arama"
  },
  
  "commands": {
    "search-barkod": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Panodaki barkodu ara"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}